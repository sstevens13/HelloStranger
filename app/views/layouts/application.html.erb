<!DOCTYPE html>
<head>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  
  <title>HelloStranger</title>
  
  <meta name="description" content="">
  <meta name="author" content="">
  <meta name="viewport" content="width=device-width, initial-scale=1.0"> 
    <style>
      body {
        padding-top: 60px; /* 60px to make the container go all the way to the bottom of the topbar */
      }
    </style>
</head>

  <body>
    <div class="navbar navbar-inverse navbar-fixed-top">
      <div class="navbar-inner">
        <div class="container">
          <button type="button" class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <%= link_to "HelloStranger", root_path, class: "brand" %>
          <div class="nav-collapse collapse">
            <ul class="nav">
              <li><%= link_to "View Events", events_path %></li>
              <% if female? %>
                <li><%= link_to "Guys you've let see you", users_path%></li>
              <% elsif logged_in? %>
                <li><%= link_to "Interested women", users_path%></li>
              <% end %>
              <% if session[:user_id] %>
                <li><%= link_to "My Profile", user_path(session[:user_id]) %></li>
                <li><%= link_to "Sign Out", sign_out_path %></li>
              <% else %>
                 <li><%= link_to "Sign Me Up!", new_user_path %></li>
                 <li><%= link_to "Sign In", sign_in_path %></li>
              <% end %>
            </ul>
          </div><!--/.nav-collapse -->
        </div>
      </div>
    </div>

    <div class="container">
      <%= render 'shared/notice', flash: flash %>
      <%= yield %>  
    </div>
  </body>
</html>