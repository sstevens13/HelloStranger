<%= form_for(@event) do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% @event.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :start %>
    <%= f.datetime_select :start %>
  </div>
  <div class="field">
    <%= f.label :end %>
    <%= f.datetime_select :end %>
  </div>
  <div class="field">
    <%= f.label :location_id %>
    <%= f.collection_select :location_id, Location.all, :id, :name %>
<!-- TODO little hacky -->
    &nbsp;<%= link_to "Don't see your location? Add it!", new_location_url %><br>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
