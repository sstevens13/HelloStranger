<h1>Listing events</h1>

<table>
  <tr>
    <th>Start</th>
    <th>End</th>
    <th>Location</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @events.each do |event| %>
  <tr>
    <!-- Update the time to reflect the timezone of the location or CST -->
    <!-- strftime("%A, %b %Y at %l:%M%P") -->
    <td><%= event.start %></td>
    <td><%= event.end %></td>
    <td><%= event.location.name %></td>
    <td><%= link_to 'Show', event %></td>
    <td><%= link_to 'Edit', edit_event_path(event) %></td>
    <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    <td><%= link_to 'Check-in', check_ins_path(event.id), :method => :post  %></td>
  </tr>
<% end %>
</table>

