<h1>Listing events</h1>

<table>
  <tr>
    <th>Start</th>
    <th>End</th>
    <th>Location</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @events.each do |event| %>
  <tr>
    <!-- Update the time to reflect the timezone of the location or CST -->
    <td><%= event.start.strftime("%A, %b %Y at %l:%M%P") %></td>
    <td><%= event.end.strftime("%A, %b %Y at %l:%M%P")  %></td>
    <!-- Refactor this daisy chain of methods -->
    <td><%= Location.find_by_id(event.location_id).name %></td>
    <td><%= link_to 'Show', event %></td>
    <td><%= link_to 'Edit', edit_event_path(event) %></td>
    <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

