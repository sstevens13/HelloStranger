<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :username %><br />
    <%= f.text_field :username %>
  </div>
  <div class ="field">
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </div>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :age %><br />
    <%= f.select :age, (18..50), :include_blank => true %>
  </div>
  <div class="field">
    <%= f.label :gender %><br />
    <%= f.select :gender, [['', ''], ['Male', 'M'], ['Female', 'F']] %>
  </div>
  <div class="field">
    <%= f.label :orientation %><br />
    <%= f.select :orientation, [['Straight', 'straight'], ['Bisexual', 'bisexual'], ['Gay', 'gay']] %>
  </div>
  <div class="field">
    <%= f.label :religion %><br />
    <%= f.text_field :religion %>
  </div>
  <div class="field">
    <%= f.label :profile %><br />
    <%= f.text_area :profile, :cols => "60", :rows => "10" %>
    <!-- TODO: column width is not correct - css is overriding
    may change when published -->
  </div>
  <div class="field">
    <%= f.label "Comma Separated List of Hobbies and Interests" %><br />
    <%= f.text_area :hobbies, :cols => "60", :rows => "5" %>
    <!-- TODO: column width is not correct - css is overriding -->
  </div>

  <% if !session[:user_id].nil? %>
    <% if female? %>
      <div class="field">
        <%= f.label :visible %><br />
        <%= f.select :visible, [['False', 0], ['True', 1]] %>
      </div>
    <% end %>
  <% end %>

  <p>
    <b> Avatar </b><br/>
    <%= f.file_field :avatar %>
  </p>

  <div class="actions">
    <%= f.submit 'Sign up', class: "btn btn-primary" %>
  </div>
<% end %>
