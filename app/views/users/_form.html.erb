<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :username %><br />
    <%= f.text_field :username %>
  </div>
  <div>
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </div>
  <div class="field">
    <%= f.label :age %><br />
    <%= f.select :age, (18..50) %>
  </div>
  <div class="field">
    <%= f.label :orientation %><br />
    <%= f.select :orientation, [['Straight', 'straight'], ['Bisexual', 'bisexual'], ['Gay', 'gay']] %>
  </div>
  <div class="field">
    <%= f.label :religion %><br />
    <%= f.text_field :religion %>
  </div>
  <div class="field">
    <%= f.label :gender %><br />
    <%= f.select :gender, [['Male', 'M'], ['Female', 'F']] %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
